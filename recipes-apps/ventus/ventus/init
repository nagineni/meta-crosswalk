#!/bin/sh

DAEMON=/usr/bin/ventus
PIDFILE=/var/run/ventus.pid
DESC="Ventus"
DAEMONUSER=app

set -e

do_start() {
	start-stop-daemon --start --quiet --background --chuid $DAEMONUSER:$DAEMONUSER --exec $DAEMON
}

do_stop() {
	start-stop-daemon --stop --chuid $DAEMONUSER:$DAEMONUSER --name xwalk --quiet
}

case "$1" in
  start)
	echo "Starting $DESC"
	do_start
	;;
  stop)
	echo "Stopping $DESC"
	do_stop
	;;
  restart|force-reload)
	echo "Restarting $DESC"
	do_stop
	sleep 1
	do_start
	;;
  *)
	echo "Usage: $0 {start|stop|restart|force-reload}" >&2
	exit 1
	;;
esac

exit 0
